
@{
    Layout = null;
}
@model OpenIDSSO.Models.UserModel
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE-edge"/>
    <meta name="viewport" content="width=device-width,initial-scale=1;" />
    <title>注册</title>
    <link href="/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/register.css" rel="stylesheet" />
</head>
<body>
    <div class="container top-content"> 
        <div class="row">
            <div class="col-md-7 slide-img">
                    <img src="~/Content/images/1.jpg" class="img-responsive" />
            </div>
            <div class="col-md-5 register-form">
                <div class="form-top">
                    <p>注册你的OpenId 账户</p>
                    <p>@Html.ValidationMessage("errorMsg")</p>
                </div>
                <div class="form-bottom">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <input type="text" name="username" class="form-control" placeholder="用户名"/>
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                        <div class="form-group">
                           <input type="email" name="useremail" class="form-control" placeholder="电子邮件" />
                            <span class="glyphicon glyphicon-envelope"></span>
                        </div>
                        <div class="form-group">
                            <input name="passwd" type="password" class="form-control" placeholder="密码"/>
                            <span class="glyphicon glyphicon-lock"></span> 
                        </div>
                        <div class="form-group">
                            <input name="confirmpasswd" type="password" class="form-control" placeholder="确认密码"/>
                            <span class="glyphicon glyphicon-lock"></span> 
                        </div>
                        <div class="form-group">
                            <button class="form-bottom btn btn-primary">注册</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script src="/Scripts/jquery-1.10.2.js"></script>
    <script src="/Scripts/bootstrap.js"></script>
</body>
</html>
